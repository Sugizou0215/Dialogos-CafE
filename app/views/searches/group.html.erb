<section id="search" class="bg-light">
  <div class="container">
    <div class='row'>
      <%= render 'users/user_info',user: @user %>
      <div class='col-9 mt-3'>
        <div class="input-group form-inline">
          <h2 class="col-8">グループ検索結果</h2>
          <%= form_with url:searches_group_path, method: :get, local: true do |f| %>
            <%= f.text_field "search[value]", placeholder: "グループ検索", class:"border-bottom form-control d-inline" %>
            <%= f.submit "検索", class:"btn btn-outline-secondary border-0 d-inline" %>
          <% end %>
        </div>
        <%= render 'groups/index',groups: @groups %>
      </div>
    </div>
  </div>
</search>