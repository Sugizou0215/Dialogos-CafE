<section id="top">
  <% unless user_signed_in? %>
    <%= render 'layouts/header' %>
  <% end %>
  <div class="container">
    <h1 class="pull-left pt-0 display-2 emerge">
      私たちの<br>
      ”対話篇”を<br>
      作ろう
    </h1>
  </div>
</section>
<div class="container">
  <div class="row">
    <div class='col-12 mt-2'>
      <h1>新着イベント</h1>
      <ul class="nav nav-tabs">
        <li class="nav-item">
            <a href="#tab1" class="nav-link active" data-toggle="tab">カレンダー</a>
        </li>
        <li class="nav-item">
            <a href="#tab2" class="nav-link" data-toggle="tab">一覧</a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="tab1" class="tab-pane active">
          <%= render 'events/calender',events: @events %>
        <div id="tab2" class="tab-pane">
          <div class="col-12 mt-2">
            <%= render 'events/index',events: @new_events %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>