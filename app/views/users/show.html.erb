<div class="container">
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= attachment_image_tag(@user, :user_image, fallback: "no-image.jpg", size: "100x100") %></tr>
        <tr>
      	  <th>USER NAME</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>ABOUT</th>
      	  <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class='row mt-3'>
        <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %>
      </div>
      <div class='row mt-3'>
        <%= link_to '',users_confirm_path(@user),class: "btn btn-outline-secondary btn-danger fas fa-user-cog" %>
      </div>
    </div>
  </div>
</div>
