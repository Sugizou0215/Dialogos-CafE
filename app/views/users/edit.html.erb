<section id="user" class="bg-light">
  <div class='container'>
    <div class='row pt-3'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>ユーザー情報変更</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :ユーザー名 %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :ユーザー画像 %>
            <%= f.attachment_field :user_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール %>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "変更", class: 'btn btn-secondary' %>
            <%= link_to '退会', users_confirm_path(current_user), class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
