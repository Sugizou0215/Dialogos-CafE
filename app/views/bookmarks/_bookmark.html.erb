<% if event.bookmark_by?(current_user) %>
  <%= link_to event_bookmarks_path(event), method: :delete, remote: true do %>
    <i class="fas fa-bookmark"></i><%= event.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to event_bookmarks_path(event), method: :post, remote: true do %>
    <i class="far fa-bookmark"></i><%= event.bookmarks.count %>
  <% end %>
<% end %>