<div class="container">
  <div class='row'>
    <%= render 'users/user_info',user: @user %>
    <div class='col-9'>
      <h2>グループ一覧</h2>
      <div class="col-12">
        <div class="card bg-light">
          <div class="row no-gutters">
            <% @groups.each do |group| %>
              <div class="col-2">
                <%= attachment_image_tag(group, :group_image, :fill, 50, 50, fallback: "no-image-icon.jpg", size: "100x100", class:"rounded-circle ml-2 mt-2" ) %>
              </div>
              <div class="col-10">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to group.name, group_path(group) %></h5>
                  <p class="card-text"><%= group.introduction %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>