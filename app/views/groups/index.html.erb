<section id="group" class="bg-light">
  <div class="container">
    <div class='row'>
      <%= render 'users/user_info',user: @user %>
      <div class='col-9 mt-3'>
        <h2>グループ一覧</h2>
        <div class="input-group d-inline-block">
          <%= form_with url:searches_group_path, method: :get, local: true do |f| %>
            <%= f.text_field "search[value]", placeholder: "検索", class:"border-bottom form-control" %>
            <%= f.submit "検索", class:"btn btn-outline-secondary border-0" %>
          <% end %>
        </div>
        <%= render 'index',groups: @groups %>
      </div>
    </div>
  </div>
</group>