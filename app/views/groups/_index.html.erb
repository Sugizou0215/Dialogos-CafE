<div class="col-12">
  <% groups.each do |group| %>
    <div class="card bg-light mb-2">
      <div class="row no-gutters">
        <div class="col-md-2 col-xs-1">
          <%= attachment_image_tag(group, :group_image, fallback: "no-image-icon.jpg", size: "100x100", class:"rounded-circle ml-2 mt-2" ) %>
        </div>
        <div class="col-10">
          <div class="card-body">
            <h5 class="card-title"><%= link_to group.name, group_path(group) %></h5>
            <p class="card-text"><%= group.introduction %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate groups %>
</div>