<div class="container">
  <div class ="row">
    <h1>グループ編集</h1>
    <%= form_with model:@group, local:true do |f| %>
      <div class="form-group">
        <%= f.label :グループ名 %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :グループ概要 %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :グループイメージ %>
        <%= f.attachment_field :group_image, class: "form-control-file event_image" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>