<div class="container">
  <div class ="row">
    <h1>イベント編集</h1>
    <%= form_with model:@event, local:true do |f| %>
      <div class="form-group">
        <%= f.label :イベント名 %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :イベント概要 %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル選択 %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :開始日時 %>
        <%= f.datetime_field :start_at, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :終了日時 %>
        <%= f.datetime_field :finish_at, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :参加締め切り日時 %>
        <%= f.datetime_field :deadline, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :参加定員 %>
        <%= f.text_field :capacity, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :使用ツール %>
        <%= f.text_field :tool, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :タグ %>
        <%= f.text_field :tag_name, class: "form-control", value: @tags %>
      </div>
      <div class="form-group">
        <%= f.label :イベントイメージ %>
        <%= f.attachment_field :event_image, class: "form-control-file event_image" %>
      </div>
      <!--ここにグループ選択-->
      <div class="form-group">
        <%= f.submit '編集する',class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>