<section id="event" class="bg-light">
  <div class="container">
    <div class='row'>
      <%= render 'users/user_info',user: @user %>
      <div class='col-9 mt-2'>
        <h2>イベント一覧</h2>
        <div class="input-group d-inline-block">
          <%= form_with url:searches_event_path, method: :get, local: true do |f| %>
            <%= f.text_field "search[value]", placeholder: "検索", class:"border-0" %>
            <%= f.submit "検索", class:"btn btn-outline-secondary border-0" %>
          <% end %>
        </div>
        <ul class="nav nav-tabs">
          <li class="nav-item">
              <a href="#tab1" class="nav-link active" data-toggle="tab">カレンダー</a>
          </li>
          <li class="nav-item">
              <a href="#tab2" class="nav-link" data-toggle="tab">一覧</a>
          </li>
        </ul>
        <div class="tab-content">
          <div id="tab1" class="tab-pane active">
            <%= render 'events/calender',events: @events %>
          <div id="tab2" class="tab-pane">
            <div class="col-12 mt-2">
              <%= render 'events/index',events: @events %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>