<section  id="login">
  <%= render 'layouts/header' %>
  <div class="container">
    <div class="row pt-0 justify-content-center">
      <div class="text-center col-12">
        <%= image_tag 'logo1_negate.png', size: "200x170" %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2>ログイン</h2>
      </div>
      <div class="text-center  col-lg-4 col-sm-8">

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions mb-3">
            <%= f.submit "ログイン", class:"btn btn-info" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>