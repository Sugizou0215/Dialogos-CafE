<section id="user" class="bg-light">
  <div class='container'>
    <div class='row pt-3'>
    	<%= render 'users/user_info',user: @user %>
    	<div class='col-lg-9 col-md-12'>
    		<h2 class="mt-3">フォロワー一覧</h2>
				<% if @users.present? %>
				  <table class="table">
					  <thead>
					    <tr>
						   	<th>イメージ</th>
						    <th>ユーザー名</th>
						    <th>プロフィール</th>
						    <th colspan="1"></th>
						  </tr>
					  </thead>
					  <tbody>
					    <% @users.each do |user| %>
					      <tr>
					      	<td><%= attachment_image_tag user, :user_image, format: 'jpeg', fallback: "no-image.jpg", size: "100x100", class:"rounded-circle ml-2 mt-2" %></td>
					        <td><%= user.name %></td>
					        <td><%= user.introduction %></td>
					        <td><%= link_to "詳細", user_path(user.id) %></td>
					      </tr>
					    <% end %>
					  </tbody>
					</table>
				<% else %>
				  <p>フォロワーはいません</p>
				<% end %>
			</div>
			<%= paginate @users %>
		</div>
  </div>
</section>
