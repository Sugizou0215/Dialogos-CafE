<section id="group" class="bg-light">
  <%= render 'layouts/error', model: @group_new %>
  <div class="container">
    <div class ="row justify-content-center pt-3">
      <h1 class="col-12 text-center">お知らせ新規投稿</h1>
      <div class="col-6">
        <%= form_with url: group_group_news_index_path, model: @group_new, local:true do |f| %>
          <div class="form-group">
            <%= f.label :タイトル %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :本文 %>
            <%= f.text_area :body, rows: 5 , class: "form-control" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit '投稿する', class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>