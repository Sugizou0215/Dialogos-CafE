<section id="search" class="bg-light">
  <%= render 'layouts/error', model: @contact %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2 class="text-center">お問い合わせフォーム</h2>
        <%= form_with model:@contact, url: confirm_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name, 'お名前*' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, '返信先メールアドレス*' %>
            <%= f.text_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :title, '件名*' %>
            <%= f.text_field :title, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :body, 'お問い合わせ内容*' %>
            <%= f.text_area :body, rows: 10, class: 'form-control' %>
          </div>
          <div>
            <%= f.submit '入力内容確認', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
